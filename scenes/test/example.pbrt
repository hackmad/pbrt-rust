LookAt 3 4 1.5  # eye
       .5 .5 0  # look at point
       0 0 1    # up vector
Camera "perspective" "float fov" 45

Sampler "halton" "integer pixelsamples" 128
Integrator "whitted"
Film "image" "string filename" "renders/test/example.png"
     "integer xresolution" [200] "integer yresolution" [200]
     #"float cropwindow" [0.4 0.5 0.37 0.65]

WorldBegin

  # uniform blue-ish illumination from all directions
  LightSource "infinite" "rgb L" [.4 .45 .5]

  #LightSource "infinite" 
  #  "string mapname" "/Users/ahmad/Documents/Projects/Dev/rust/pbrt-v3-scenes/bunny-fur/textures/20060807_wells6_hd.exr"

  # approximate the sun
  LightSource "distant" "point from" [ -30 40  100 ] "blackbody L" [3000 1.5]
  
  #AttributeBegin
  #  Material "glass" "rgb Kt" [0 0 0]
  #  Shape "sphere" "float radius" 1
  #AttributeEnd

  AttributeBegin
    MakeNamedMaterial "one" "string type" [ "glass" ] 
    MakeNamedMaterial "two" "string type" [ "matte" ] 
    Material "mix" 
      "string namedmaterial1" [ "one" ] 
      "string namedmaterial2" [ "two" ] 
      "rgb amount" [ 0.4 0.4 0.4 ] 

    Scale 4 4 4
    Rotate 45 0 0 1
    Rotate 90 1 0 0
    Shape "loopsubdiv"
        "integer indices" [ 0 1 2  0 3 1  0 2 3  1 3 2 ]
        "point P" [  0.9428  0.0000 -0.3333
                    -0.4714  0.8165 -0.3333
                    -0.4714 -0.8165 -0.3333
                     0.0000  0.0000  1.0000
                 ]
  AttributeEnd

  #AttributeBegin
  #  Material "glass"
  #  Rotate 90 1 0 0
  #  Shape "trianglemesh"
  #      "integer indices" [ 0 1 2  0 3 1  0 2 3  1 3 2 ]
  #      "point P" [  0.9428  0.0000 -0.3333
  #                  -0.4714  0.8165 -0.3333
  #                  -0.4714 -0.8165 -0.3333
  #                   0.0000  0.0000  1.0000
  #               ]
  #AttributeEnd

  AttributeBegin
    Texture "checks" "spectrum" "checkerboard"
            "float uscale" [8] "float vscale" [8]
            "rgb tex1" [.1 .1 .1] "rgb tex2" [.8 .8 .8]
    Material "matte" "texture Kd" "checks"
    Translate 0 0 -1
    Shape "trianglemesh"
        "integer indices" [ 0 1 2   0 2 3 ]
        "point P" [ -20 -20 0   20 -20 0   20 20 0   -20 20 0 ]
        "float st" [ 0 0   1 0   1 1   0 1 ]
  AttributeEnd
  
WorldEnd